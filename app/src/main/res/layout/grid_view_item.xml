<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="property"
            type="com.interntask.wiseLeap.network.MarketItem" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            app:cardCornerRadius="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="46dp"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:background="#FFFFFF"
                    app:srcCompat="@drawable/btc_icon" />

                <View
                    android:layout_width="4dp"
                    android:layout_height="40dp"
                    android:background="#C2185B" />
                <TextView
                    android:id="@+id/mars_image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:paddingStart="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:scaleType="centerCrop"
                    android:text="@{property.symbol}"
                    android:textSize="20sp"
                    tools:text="BTC"
                    android:layout_weight="10"/>

                <TextView
                    android:id="@+id/change"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:paddingEnd="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:scaleType="centerCrop"
                    android:text="@{property.change24h}"
                    android:textColor="@{property.hasDecreased ? @color/red : @color/green}"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="BTC"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </FrameLayout>
</layout>
